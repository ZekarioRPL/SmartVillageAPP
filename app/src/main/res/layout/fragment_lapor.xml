<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/template"
    tools:context="com.example.user.smartvillage.Activity.dashboard_user.lapor.LaporFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul_lapor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Pembangunan :"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                </Spinner>

            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Laporkan Masalah :"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/deskripsi_lapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:gravity="top"
            android:background="#BFFFFFFF"
            android:inputType="text"
            android:minHeight="100dp" />

        <Button
            android:id="@+id/button_lapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navy"
            android:text="SUBMIT LAPOR"
            android:textColor="@color/gold" />

    </LinearLayout>

</LinearLayout>
