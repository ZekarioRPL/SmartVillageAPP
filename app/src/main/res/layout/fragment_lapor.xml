<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/softblue"
    tools:context="com.example.user.smartvillage.Activity.dashboard_user.lapor.LaporFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_judul_lapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColorHint="@color/darkgrey">

            <EditText
                android:id="@+id/judul_lapor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Judul Pembangunan"
                android:inputType="text"
                android:textColor="#000"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Laporkan Masalah :"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/deskripsi_lapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:gravity="top"
            android:background="@color/white"
            android:inputType="text"
            android:minHeight="100dp" />

        <Button
            android:id="@+id/button_lapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navy"
            android:text="SUBMIT LAPOR"
            android:textColor="@color/gold" />

    </LinearLayout>

</LinearLayout>
